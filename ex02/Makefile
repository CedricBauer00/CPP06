NAME = Base

SRC = src/main.cpp \
		src/A.cpp \
		src/B.cpp \
		src/C.cpp \
		src/Base.cpp

OBJ := $(SRC:%.cpp=%.o)

CXX = c++
CXXFLAGS = -Wall -Wextra -Werror -std=c++17

all: $(NAME)

$(NAME): $(OBJ)
	@$(CXX) $(CXXFLAGS) $(OBJ) -o $(NAME) && echo "\033[32mCompilation successful!\033[0m"

%.o: %.cpp
	@$(CXX) $(CXXFLAGS) -o $@ -c $<

fclean:
	@rm -f $(NAME) $(OBJ) > /dev/null && echo "\033[31mProgramm cleared successfully!\033[0m"

re: fclean all

.PHONY: all fclean re
